<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyProject.EklePage"
             Title="EklePage">
    <VerticalStackLayout>
    <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="Auto" Margin="5" ColumnSpacing="5" RowSpacing="5">
            <Label Text="Not:" Grid.Row="0" Grid.Column="0"/>
            <Entry x:Name="txtEkle" Placeholder="" Grid.Row="1" Grid.Column="1"/>
        
        <Grid Grid.Row="2" ColumnDefinitions="*,*" Grid.ColumnSpan="2">
            <Button Text="Tamam" x:Name="btnOk"  Clicked="btnOk_Clicked" />
            <Button Text="Iptal" Grid.Column="1" Clicked="btnCancel_Clicked"/>
        </Grid>
    </Grid>
    </VerticalStackLayout>
</ContentPage>